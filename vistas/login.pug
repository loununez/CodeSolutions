extends layout

block contenido
  style.
    /* Estilos generales para la página de login */
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f7fc;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    h1 {
      font-size: 2rem;
      color: #1f2937;
      margin-bottom: 20px;
    }

    form {
      background-color: #fff;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 400px;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    label {
      font-size: 1rem;
      color: #4b5563;
    }

    input {
      padding: 10px;
      font-size: 1rem;
      border: 1px solid #e5e7eb;
      border-radius: 6px;
      outline: none;
      margin-top: 5px;
    }

    input:focus {
      border-color: #2563eb;
      box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.2);
    }

    button {
      background-color: #2563eb;
      color: white;
      padding: 12px;
      border: none;
      border-radius: 6px;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #1d4ed8;
    }

    p {
      text-align: center;
      font-size: 1rem;
    }

    .error {
      color: red;
      font-size: 0.9rem;
      text-align: center;
    }

  // Título de la página
  h1 Iniciar Sesión
  
  // Mostrar mensaje de error si es que existe
  if error
    p.error= error

  // Formulario de login
  form(method="POST" action="/auth/login")
    label(for="username") Usuario:
    input(type="text" name="username" required)
    
    // Campo para la contraseña
    label(for="password") Contraseña:
    input(type="password" name="password" required)
    
    // Botón para enviar el formulario
    button(type="submit") Entrar
