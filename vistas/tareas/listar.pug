extends ../layout

block contenido
  h1 Lista de Tareas

  a.btn(href="/tareas/crear") Nueva Tarea

  if tareas && tareas.length > 0
    table
      thead
        tr
          th Tarea
          th Horas
          th Proyecto
          th Estado
          th Acciones
      tbody
        each tarea in tareas
          - if (tarea.nombre)
            tr
              td= tarea.nombre
              td= tarea.horasRegistradas
              td= tarea.proyectoId
              td= tarea.estado
              td
                a.btn(href=`/tareas/editar/${tarea.id}`) Editar
                form(method="POST" action=`/tareas/eliminar/${tarea.id}` style="display:inline;")
                  button.btn(type="submit" onclick="return confirm('Â¿Seguro que deseas eliminar esta tarea?')") Eliminar
  else
    p No hay tareas registradas