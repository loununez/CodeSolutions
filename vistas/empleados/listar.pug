extends ../layout

block contenido
  style.
    .encabezado {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }

    .titulo h1 {
      font-size: 2rem;
      font-weight: bold;
      margin: 0;
    }

    .titulo p {
      color: #6b7280;
      margin-top: 4px;
      font-size: 0.95rem;
    }

    .boton {
      background: #0f172a;
      color: #fff;
      padding: 10px 16px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: bold;
      font-size: 0.9rem;
      display: inline-block;
      transition: background 0.3s ease;
    }

    .boton:hover {
      background: #1e293b;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 1.5rem;
    }

    .card {
      border: 1px solid #e5e7eb;
      border-radius: 16px;
      padding: 16px;
      background-color: #fff;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1rem;
    }

    .card-nombre {
      font-weight: bold;
      font-size: 1.2rem;
      margin: 0;
    }

    .card-puesto {
      font-size: 1rem;
      color: #4b5563;
      margin-bottom: 0.8rem;
    }

    .card-contacto p {
      font-size: 0.9rem;
      color: #374151;
      margin: 4px 0;
    }

    .estado {
      font-size: 0.85rem;
      font-weight: bold;
      padding: 6px 14px;
      border-radius: 999px;
      display: inline-block;
      text-align: center;
      width: auto;
      border: none;
      cursor: pointer;
    }

    .estado.activo {
      background-color: #10b981;
      color: #fff;
    }

    .estado.inactivo {
      background-color: #d1d5db;
      color: #374151;
    }

    .icono {
      margin-right: 6px;
      color: #6b7280;
    }

    .eliminar-boton {
      background-color: #000;
      color: white;
      border: 1px solid #000;
      padding: 6px 14px;
      font-size: 0.85rem;
      font-weight: bold;
      border-radius: 0.375rem;
      cursor: pointer;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

