doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Code Solutions - Panel

    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap")

    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Inter', sans-serif;
      }

      body {
        display: flex;
        background-color: #f9fafb;
      }

      .sidebar {
        width: 260px;
        height: 100vh;
        background-color: #ffffff;
        border-right: 1px solid #e5e7eb;
        padding: 20px;
        display: flex;
        flex-direction: column;
        border-top-left-radius: 12px;
        border-bottom-left-radius: 12px;
      }

      .logo {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 30px;
      }

      .logo .icon {
        background-color: #111827;
        color: white;
        border-radius: 12px;
        padding: 10px;
        font-weight: bold;
        font-size: 14px;
      }

      .logo-text {
        font-weight: 600;
        font-size: 18px;
      }

      .sidebar .section-title {
        color: #6b7280;
        font-size: 12px;
        margin-bottom: 10px;
        text-transform: uppercase;
      }

      .nav-link {
        display: flex;
        align-items: center;
        padding: 10px;
        border-radius: 8px;
        color: #111827;
        text-decoration: none;
        margin-bottom: 5px;
        transition: background 0.3s;
        font-size: 15px;
      }

      .nav-link:hover {
        background-color: #f3f4f6;
      }

      .nav-link svg {
        margin-right: 8px;
      }

      .nav-link.active {
        background-color: #111827; /* Fondo negro */
        color: white; /* Texto blanco */
      }

      .main-content {
        flex-grow: 1;
        padding: 30px;
      }

  body
  //- Sidebar
  .sidebar
    .logo
      .icon CS
      .logo-text Code Solutions
    p.section-title Gestión
    a.nav-link(
      class=currentPath === '/' ? 'active' : '',
      href="/"
    )
      svg(width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg")
        path(d="M3 9.75L12 3l9 6.75V21a.75.75 0 01-.75.75H3.75A.75.75 0 013 21V9.75z")
      | Inicio
    a.nav-link(
      class=currentPath === '/empleados' ? 'active' : '',
      href="/empleados"
    )
      svg(width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24")
        path(d="M17 20h5v-2a4 4 0 00-5-3.87")
        path(d="M9 20H4v-2a4 4 0 015-3.87")
        circle(cx="12" cy="7" r="4")
      | Empleados
    a.nav-link(
      class=currentPath === '/tareas' ? 'active' : '',
      href="/tareas"
    )
      svg(width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24")
        path(d="M5 13l4 4L19 7")
      | Tareas
    a.nav-link(
      class=currentPath === '/proyectos' ? 'active' : '',
      href="/proyectos"
    )
      svg(width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24")
        path(d="M3 3h18v4H3z")
        path(d="M7 7v14h10V7")
      | Proyectos
    a.nav-link(
      class=currentPath === '/reportes' ? 'active' : '',
      href="/reportes"
    )
      svg(width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24")
        path(d="M3 3v18h18")
        path(d="M9 17V9M15 17V5")
      | Reportes

  //- Contenido dinámico
  .main-content
    block contenido

  //- Bloque de scripts
  block scripts