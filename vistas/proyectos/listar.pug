//- Vista que muestra todos los proyectos del sistema
extends ../layout  

block contenido 
  h1 Lista de Proyectos
  
  a.btn.btn-primary.mb-3(href="/proyectos/crear") Nuevo Proyecto

  if proyectos && proyectos.length > 0
    table.table
      thead
        tr
          th Nombre
          th Descripción
          th Cliente
          th Estado
          th Acciones
      tbody
        each proyecto in proyectos
          - if (proyecto.nombre) 
            tr
              td= proyecto.nombre
              td= proyecto.descripcion
              td= proyecto.cliente
              td= proyecto.estado
              td
                // Botón de Editar
                a.btn.btn-sm.btn-warning(href=`/proyectos/editar/${proyecto.id}`) Editar
                // Botón de Eliminar
                a.btn.btn-sm.btn-danger(href=`/proyectos/eliminar/${proyecto.id}` onclick="return confirm('¿Estás seguro de que querés eliminar este proyecto?')") Eliminar
  else
    p.aviso No hay proyectos registrados.