      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 20px;
    }

    .card-full {
      background: white;
      padding: 20px;
      border: 1px solid #e5e7eb;
      border-radius: 12px;
    }

    .card-full h3 {
      font-size: 18px;
      font-weight: 700;
      color: #111827;
      margin-bottom: 5px;
    }

    .card-full .sub {
      font-size: 14px;
      color: #6b7280;
      margin-bottom: 20px;
    }

    .activity li {
      margin-bottom: 10px;
      font-size: 14px;
    }

    .activity .dot {
      display: inline-block;
      width: 10px;
      height: 10px;
      border-radius: 50%;
      margin-right: 6px;
    }

    .activity strong {
      font-weight: 600;
      color: #111827;
    }

    .project {
      margin-bottom: 16px;
      position: relative;
    }

    .project .title {
      font-weight: 600;
      color: #111827;
      margin-bottom: 5px;
    }

    .progress {
      background: #f3f4f6;
      height: 8px;
      border-radius: 4px;
      overflow: hidden;
    }

    .bar {
      background: #111827;
      height: 8px;
    }

    .percent {
      position: absolute;
      top: 0;
      right: 0;
      font-size: 13px;
      color: #4b5563;
    }
